{
    "name": "basyx",
    "version": "1.0.0",
    "main": "electron-app.js",
    "license": "EPL-1.0",
    "scripts": {
        "ng": "ng",
        "original-start": "ng serve --ec true --port 4201",
        "original-build": "ng build --prod",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",

        "preinstall": "echo \"local modules could be checked here before installing the rest\"",

        "start": "ng serve --ec=true",
        "start:web": "ng serve --ec=true",
        "build:electron:main": "tsc electron-app.ts --outDir dist && copyfiles package.json dist && cd dist && npm install --prod && cd ..",
        "fast": "npm uninstall angular-onem2m && cd modules/angular-onem2m && npm install && npm run build && cd .. & cd .. && npm uninstall angular-basyx && cd modules/angular-basyx && npm uninstall angular-onem2m && npm install && npm run build && cd .. && cd .. && npm install",
        "build": "ng build",
        "build:electron": "ng build --display-error-details && npm run build:electron:main",
        "build:prod": "npm run build --prod",
        "build:electron:prod": "cross-env NODE_ENV=production npm run build:electron",
        "electron:serve": "npm run build:electron:main && electron ./dist --serve",
        "electron:test": "electron ./dist",
        "electron:dev": "npm run build:electron && electron ./dist",
        "electron:prod": "npm run build:electron:prod && electron ./dist",
        "electron:linux": "npm run build:electron:prod && node package.js --asar --platform=linux --arch=x64",
        "electron:windows": "npm run build:electron:prod && node package.js --asar --platform=win32 --arch=ia32",
        "electron:mac": "npm run build:electron:prod && node package.js --asar --platform=darwin --arch=x64"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "5.2.9",
        "@angular/cdk": "5.2.4",
        "@angular/common": "5.2.9",
        "@angular/compiler": "5.2.9",
        "@angular/core": "5.2.9",
        "@angular/forms": "5.2.9",
        "@angular/platform-browser": "5.2.9",
        "@angular/platform-browser-dynamic": "5.2.9",
        "@angular/router": "5.2.9",
        "@ng-bootstrap/ng-bootstrap": "1.0.0",
        "@ngx-translate/core": "9.1.1",
        "@ngx-translate/http-loader": "2.0.1",
        "chart.js": "2.7.2",
        "core-js": "2.5.4",
        "rxjs": "5.5.8",
        "zone.js": "0.8.25",

        "angular-tree-component": "7.1.0",

        "bpmn-js": "1.0.3",
        "font-awesome": "4.7.0",
        "angular2-uuid": "1.1.1",
        "jquery": "3.3.1",
        "electron": "1.6.11",
        "electron-connect": "0.4.8",
        "electron-packager": "8.7.1",
        "reflect-metadata": "0.1.12",
        "systemjs": "0.21.2",
        "ng2-charts": "1.6.0",
        "ngx-uploader": "4.2.4",
        "ngx-cookie": "3.0.1",

        "yarn": "1.5.1",

        "ngx-contextmenu": "4.2.0",
        "ngx-toastr": "8.4.0",

        "file-saver": "1.3.8",
        "@types/file-saver": "1.3.0",
        "ng2-file-upload": "1.3.0",
        "ng2-split-pane": "1.4.0",
        "angular-onem2m": "file:modules/angular-onem2m",
        "angular-basyx": "file:modules/angular-basyx"
    },

    "devDependencies": {
        "@angular/cli": "1.7.3",
        "@angular/compiler-cli": "5.2.9",
        "@angular/language-service": "5.2.9",
        "@types/jasmine": "2.8.6",
        "@types/jasminewd2": "2.0.3",
        "@types/node": "9.6.2",
        "codelyzer": "4.2.1",
        "jasmine-core": "3.1.0",
        "jasmine-spec-reporter": "4.2.1",
        "karma": "2.0.0",
        "karma-chrome-launcher": "2.2.0",
        "karma-coverage-istanbul-reporter": "1.4.2",
        "karma-jasmine": "1.1.1",
        "protractor": "5.3.0",
        "ts-node": "5.0.1",
        "tslint": "5.9.1",
        "typescript": "2.6.2",
        "copyfiles": "1.2.0",
        "cross-env": "5.0.1",
        "electron-packager": "8.7.1",
        "concurrently": "3.5.1",
        "chai": "4.1.2"
    }
}
